<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greeen"
    tools:context=".SellerRegistrationShopDetails">

    <LinearLayout
        android:id="@+id/topNavigationNewsFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:weightSum="8"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/menu"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:scaleY="1.5"
            android:scaleX="1.5"
            android:visibility="visible"
            android:background="@drawable/white_button"
            app:srcCompat="@drawable/menu" />

        <ImageButton
            android:id="@+id/place"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/white_button"
            android:visibility="visible"
            app:srcCompat="@drawable/place" />

        <ImageButton
            android:id="@+id/favourite"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/white_button"
            android:visibility="visible"
            app:srcCompat="@drawable/favourite" />

        <EditText
            android:id="@+id/search"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_weight="4"
            android:background="@drawable/search"
            android:drawableRight="@drawable/search_icon"
            android:elevation="10dp"
            android:ems="10"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/purse"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/white_button"
            android:visibility="visible"
            app:srcCompat="@drawable/purse" />

        <ImageButton
            android:id="@+id/cart"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleY="0.7"
            android:scaleX="0.7"
            android:background="@drawable/white_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_gravity="end"
            app:srcCompat="@drawable/cart" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/topNavigationNewsFeed"
        android:layout_above="@+id/bottomNavigationNewsFeed"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="20dp"
        android:elevation="5dp"
        android:background="@drawable/background_white"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="12dp"
            android:background="@drawable/input"
            android:orientation="vertical">


            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:padding="5dp"
                android:background="@color/customer_registration"
                android:text="Seller Registration:"
                android:textColor="@color/colorPrimaryDark"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="12dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:weightSum="2"
                    android:orientation="horizontal">

                    <View
                        android:id="@+id/line1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@drawable/stepper_green"/>

                    <View
                        android:id="@+id/line2"
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/stepper_one"/>

                </LinearLayout>

                <View
                    android:id="@+id/dot1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:elevation="5dp"
                    android:background="@drawable/green_dots"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_below="@+id/dot1"
                    android:textColor="@color/colorPrimary"
                    android:text="Owner Details"
                    android:layout_marginLeft="10dp"/>

                <View
                    android:id="@+id/dot2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:elevation="5dp"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/three_dots"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_below="@+id/dot2"
                    android:textColor="@color/colorPrimary"
                    android:text="Shop Details"
                    android:layout_centerHorizontal="true"/>

                <View
                    android:id="@+id/dot3"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginRight="40dp"
                    android:elevation="5dp"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/three_dots"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_below="@+id/dot1"
                    android:textColor="@color/colorPrimary"
                    android:text="Preview &amp; Submit"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="5dp"/>

            </RelativeLayout>

            <EditText
                android:id="@+id/shopName"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/input"
                android:ems="10"
                android:hint="Enter Shop Name"
                android:paddingRight="10dp"
                android:inputType="text"
                android:paddingLeft="10dp"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/pinCode"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:hint="Enter Shop Pin code"
                    android:background="@drawable/input"
                    android:inputType="number"
                    android:ems="10"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/chooseLocation"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:onClick="chooseLocation"
                    android:padding="5dp"
                    android:drawableRight="@drawable/location"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:background="@drawable/input"
                    android:textAllCaps="false"
                    android:text="@string/btn_choose_location"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/shopImage"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/card"
                    android:text="Upload From image of shop"
                    android:paddingRight="10dp"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:textSize="14sp" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:textSize="14sp"
                    android:onClick="shopImage"
                    android:textStyle="bold"
                    android:background="@drawable/choose_button"
                    android:textAllCaps="false"
                    android:text="Choose File"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/interiorShopImage"
                    android:layout_width="180dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:textColor="@color/colorPrimary"
                    android:background="@drawable/card"
                    android:text="Upload some Interior image of shop"
                    android:layout_weight="1"
                    android:padding="7dp"
                    android:textSize="14sp" />

                <Button
                    android:layout_width="30dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:onClick="shopInteriorImage"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:background="@drawable/choose_button"
                    android:textAllCaps="false"
                    android:text="Choose File"/>

            </LinearLayout>

            <TextView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/card"
                android:textColor="@color/colorPrimary"
                android:text="Choose Shop Category"
                android:padding="7dp"
                android:onClick="category"
                android:drawableRight="@drawable/dropdown"
                android:inputType="textEmailAddress"
                android:textSize="14sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="-5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="105dp"
                    android:weightSum="3"
                    android:elevation="10dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/restaurant"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textAllCaps="true"
                        android:padding="7dp"
                        android:visibility="invisible"
                        android:enabled="false"
                        android:onClick="restaurant"
                        android:textColor="@color/colorPrimary"
                        android:text="Restaurant"
                        android:background="@drawable/card"/>

                    <TextView
                        android:id="@+id/hotel"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textAllCaps="true"
                        android:padding="7dp"
                        android:enabled="false"
                        android:visibility="invisible"
                        android:onClick="hotel"
                        android:textColor="@color/colorPrimary"
                        android:text="Hotel"
                        android:background="@drawable/card"/>

                    <TextView
                        android:id="@+id/sweet"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:textAllCaps="true"
                        android:padding="7dp"
                        android:enabled="false"
                        android:visibility="invisible"
                        android:onClick="sweet"
                        android:textColor="@color/colorPrimary"
                        android:text="Sweet Shop"
                        android:background="@drawable/card"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <EditText
                        android:id="@+id/contactNumber"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/input"
                        android:ems="10"
                        android:hint="Enter Shop Contact Number"
                        android:inputType="number"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/input"
                        android:ems="10"
                        android:hint="Enter Shop Contact Email id"
                        android:inputType="textEmailAddress"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/gstNumber"
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_margin="5dp"
                        android:background="@drawable/input"
                        android:ems="10"
                        android:hint="GST Number"
                        android:inputType="text"
                        android:paddingLeft="10dp"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/button3"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center"
                        android:text="Submit"
                        android:onClick="submit"
                        android:textStyle="bold"
                        android:layout_marginBottom="5dp"
                        android:textColor="@color/colorPrimary"
                        android:background="@color/greeen"
                        android:layout_margin="5dp"
                        android:textSize="14sp"
                        android:textAllCaps="false"/>

                </LinearLayout>

            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottomNavigationNewsFeed"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:weightSum="8"
        android:background="@drawable/background_white"
        android:elevation="5dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="10dp"
            android:visibility="visible"
            android:background="@drawable/white_button"
            app:srcCompat="@drawable/home" />

        <ImageButton
            android:id="@+id/nul"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/white_button"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/nul1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/white_button"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/nul2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/white_button"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/nul3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/white_button"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/nul4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/white_button"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/nul5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/white_button"
            android:visibility="visible" />

        <ImageButton
            android:id="@+id/profNewsFeed"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/white_button"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:layout_gravity="end"
            app:srcCompat="@drawable/profile" />

    </LinearLayout>

</RelativeLayout>